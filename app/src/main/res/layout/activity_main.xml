    Design by Iman Nurohman
 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="39dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Menjumlahkan 2 Buah Bilangan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        tools:text="Menjumlahkan 2 Buah Bilangan" />

    <TextView
        android:layout_below="@id/textView"
        android:layout_marginTop="45dp"
        android:id="@+id/tv_bill_1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="Masukan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/txtBill"
        android:layout_below="@id/tv_bill_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_below="@id/txtBill"
        android:layout_marginTop="25dp"
        android:id="@+id/tv_bill_2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="Masukan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/txtBill2"
        android:layout_below="@id/tv_bill_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/btn_hitung_bilangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitungan Bilangan"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txtBill2"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Penjumlahan"
        android:layout_below="@id/btn_hitung_bilangan"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:id="@+id/tv_hasil"
        />
    <EditText
        android:id="@+id/hasil"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_hasil"
        android:layout_width="145dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
</RelativeLayout>